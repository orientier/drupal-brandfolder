<?php

/**
 * @file
 * Contains brandfolder.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Brandfolder\Brandfolder;

function brandfolder_api() {
  // Get the API key from module configuration.
  $apikey = \Drupal::config('brandfolder.brandfoldersettings')->get("brandfolder_api_key");
  if (empty($apikey)) {
    return FALSE;
  }
  // Initialize Brandfolder object.
  $brandfolder = new Brandfolder($apikey);
  // Return object
  return $brandfolder;
}

/**
 * Implements hook_help().
 */
function brandfolder_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the brandfolder module.
    case 'help.page.brandfolder':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Allows Drupal developers to easily integrate with a Brandfolder account.') . '</p>';
      return $output;

    default:
  }
}

